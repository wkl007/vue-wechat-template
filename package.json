{
  "name": "vue-wechat-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "serve": "vue-cli-service serve",
    "build:dev": "vue-cli-service build --mode dev",
    "build:pro": "vue-cli-service build --mode production",
    "lint": "npm run lint:code && npm run lint:style",
    "lint:code": "vue-cli-service lint",
    "lint:style": "vue-cli-service lint:style",
    "deploy": "deploy-cli-service deploy",
    "deploy:dev": "deploy-cli-service deploy --mode dev",
    "deploy:pro": "deploy-cli-service deploy --mode pro",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "src/**/*.{js,vue}": [
      "vue-cli-service lint"
    ],
    "src/**/*.{vue,htm,html,css,sss,less,scss}": [
      "vue-cli-service lint:style"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "core-js": "^3.12.1",
    "dayjs": "^1.10.4",
    "good-storage": "^1.1.1",
    "js-cookie": "^2.2.1",
    "numeral": "^2.0.6",
    "register-service-worker": "^1.7.2",
    "vant": "^2.12.19",
    "vue": "^2.6.12",
    "vue-router": "^3.5.1",
    "vue-wechat-title": "^2.0.7",
    "vuex": "^3.6.2",
    "weixin-js-sdk": "^1.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@samhammer/vue-cli-plugin-stylelint": "^2.0.1",
    "@vue/cli-plugin-babel": "~4.5.13",
    "@vue/cli-plugin-eslint": "~4.5.13",
    "@vue/cli-plugin-pwa": "~4.5.13",
    "@vue/cli-plugin-router": "~4.5.13",
    "@vue/cli-plugin-vuex": "~4.5.13",
    "@vue/cli-service": "~4.5.13",
    "@vue/eslint-config-standard": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-import": "^1.13.3",
    "commitizen": "^4.2.4",
    "compression-webpack-plugin": "^6.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "deploy-cli-service": "^1.3.0",
    "eslint": "^7.26.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.9.0",
    "husky": "^6.0.0",
    "less": "^3.13.1",
    "less-loader": "^7.3.0",
    "lint-staged": "^11.0.0",
    "postcss-px-to-viewport": "^1.1.1",
    "stylelint": "^13.13.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "terser-webpack-plugin": "^4.2.3",
    "vconsole": "^3.6.0",
    "vue-template-compiler": "^2.6.12"
  }
}
